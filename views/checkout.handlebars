            <option value="2">BANCO BBVA</option>
            <option value="3">BANCO DAVIVIENDA</option>
            <option value="4">BANCO DE BOGOTA</option>
            <option value="5">BANCO BANCOLOMBIA</option>
            <option value="6">BANCO CITIBANK</option>
          </select>
  
         <p>Tipo de documento</p>
         <select name="tipoDocumento">
            <option value="0">Seleccione un tipo</option>
           <option value="1">Cédula de ciudadanía</option>
           <option value="2">Cédula de extranjería</option>
           <option value="3">Tarjeta de identidad</option>
           <option value="4">NIT</option>
         </select>
  
       </div>
  
       <div class="envio-part2">
          <p>Número de tarjeta</p>
          <input type="text" name="numeroTarjeta">
   
          <p>Nombre del titular</p>
          <input type="text" name="nombreTitular">
   
          <p>Número de documento</p>
          <input type="text" name="numeroDocumento">
   
